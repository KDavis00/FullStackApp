@using System.Text.Json
@using System.Globalization
@inject HttpClient Http
@page "/fetchproducts"

<h3>Product List</h3>

<ul>
    @if (products != null)
    {
        foreach (var product in products)
        {
            <li>
                <strong>@product.Name</strong> — 
                <span style="color:green">@product.Price.ToString("C2", CultureInfo.CreateSpecificCulture("en-US"))</span> 
                (Stock: @product.Stock)
            </li>
        }
    }
    else if (errorMessage != null)
    {
        <li style="color:red">@errorMessage</li>
    }
    else
    {
        <li>Loading...</li>
    }
</ul>

@code {
    private Product[]? products;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await Http.GetAsync("/api/products");
            response.EnsureSuccessStatusCode();

            var json = await response.Content.ReadAsStringAsync();
            products = JsonSerializer.Deserialize<Product[]>(json, new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true
            });
        }
        catch (Exception ex)
        {
            errorMessage = $"Error fetching products: {ex.Message}";
        }
    }

    public class Product
    {
        public int Id { get; set; }
        public string Name { get; set; } = string.Empty;
        public double Price { get; set; }
        public int Stock { get; set; }
    }
}
